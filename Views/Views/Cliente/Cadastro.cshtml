@{
    ViewBag.Title = "Cadastro";
}

<div class="container">
    <div class="card card-register mx-auto mt-4">
        <div class="card-header">Registro de Cliente</div>
        <div class="card-body">            
            <form action="@Url.Action("Store")" method="post">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" id="nome" class="form-control" placeholder="Nome" required="required" autofocus="autofocus" name="nome" />
                                <label for="nome">Nome</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" id="cpf" class="form-control" placeholder="Cpf"
                                       required="required" autofocus="autofocus" name="cpf" />
                                <label for="cpf">Cpf</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="date" id="data-nascimento" class="form-control" placeholder="Data Nascimento"
                                           required="required" autofocus="autofocus" name="data_nascimento" />
                                    <label for="data-nascimento">Data Nascimento</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="text" id="cep" class="form-control" placeholder="Cep"
                                           required="required" autofocus="autofocus" name="cep" />
                                    <label for="cep">Cep</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <select id="campo-cidade" name="idCidade" class="form-control" required="required">
                                        <option disabled="disabled" placeholder="cidade id" selected="selected" value="">Selecione uma Cidade</option>
                                        @foreach (Model.Cidade cidade in ViewBag.Cidades)
                                        {
                                            <option value="@cidade.Id">@cidade.Nome</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="number" id="numero" class="form-control" placeholder="Número"
                                           required="required" autofocus="autofocus" name="numero" />
                                    <label for="numero">Número</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="text" id="complemento" class="form-control" placeholder="Complemento"
                                           required="required" autofocus="autofocus" name="complemento" />
                                    <label for="complemento">Complemento</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="text" id="logradouro" class="form-control" placeholder="Logradouro"
                                           required="required" autofocus="autofocus" name="logradouro" />
                                    <label for="logradouro">Logradouro</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success col-md-12" type="submit">Registrar</button>                
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Index", "Cliente")">Deseja alterar algum cliente já cadastrado ?</a>
            </div>
        </div>
    </div>
</div>
