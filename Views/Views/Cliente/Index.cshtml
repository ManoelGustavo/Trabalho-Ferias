@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Lista de Clientes</h2>
<div>
    <a href="@Url.Action("Cadastro")" class="btn btn-primary mt-1">Novo Cliente</a>
</div>
<div class="row">
    <div class="col-3 offset-9">
        <div class="form-group">
            <input type="text" id="campo-pesquisa" placeholder="Busca" class="form-control" />
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data Nascimento</th>
            <th>Cidade</th>
            <th>Cep</th>
            <th>Número</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody id="lista-clientes"></tbody>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data Nascimento</th>
            <th>Cidade</th>
            <th>Cep</th>
            <th>Número</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>
<script src="~/Scripts/Cliente/Cliente.js"></script>