@{
    ViewBag.Title = "Editar";
}

<div class="container">
    <div class="card card-register mx-auto mt-4">
        <div class="card-header">Editar Projeto</div>
        <div class="card-body">
            <form action="@Url.Action("Update")" method="post">
                <input type="hidden" name="id" value="@ViewBag.projeto.Id" />
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <label for="id">Código</label>
                                <input type="text" id="id" name="id" class="form-control"
                                       placeholder="Código" required="required"
                                       value="@ViewBag.Projeto.Id" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <label for="campo-cliente">Cliente</label>
                                    <select id="campo-cliente" name="idCliente" class="form-control" required="required">
                                        @foreach (Model.Cliente cliente in ViewBag.Clientes)
                                        {
                                            if (cliente.Id == ViewBag.Projeto.IdCliente)
                                            {
                                                <option value="@cliente.Id" selected="selected">@cliente.Nome</option>
                                            }
                                            else
                                            {
                                                <option value="@cliente.Id">@cliente.Nome</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <label for="campo-nome">Nome</label>
                                    <input type="text" id="campo-nome" class="form-control" required="required"
                                           placeholder="Nome" autofocus="autofocus" name="nome" value="@ViewBag.Projeto.Nome" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <label for="campo-data-criacao">Data Criação</label>
                                    <input type="datetime" id="campo-data-criacao" class="form-control data" required="required"
                                           autofocus="autofocus" name="dataCriacaoProjeto" value="@ViewBag.Projeto.DataCriacaoProjeto.ToString("dd-MM-yyyy")" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <label for="campo-data-finalizacao">Data Finalização</label>
                                    <input type="datetime" id="campo-data-finalizacao" class="form-control data" required="required"
                                           autofocus="autofocus" name="dataFinalizacao" value="@ViewBag.Projeto.DataFinalizacao.ToString("dd-MM-yyyy")" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success col-md-12" type="submit">Salvar</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Index", "Projeto")">Deseja alterar algum projeto já registrado ?</a>
            </div>
        </div>
    </div>
</div>