@{
    ViewBag.Title = "Cadastro";
}

<div class="container">
    <div class="card card-register mx-auto mt-4">
        <div class="card-header">Registro de Projeto</div>
        <div class="card-body">
            <form action="@Url.Action("Store")" method="post">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <select id="campo-cliente" name="cliente" class="form-control" required="required">
                                    <option disabled="disabled" placeholder="Cliente" selected="selected">Selecione um Cliente</option>
                                    @foreach (Model.Cliente cliente in ViewBag.Clientes)
                                    {
                                        <option value="@cliente.Id">@cliente.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" id="nome" class="form-control" required="required"
                                       placeholder="Nome" autofocus="autofocus" name="nome" />
                                <label for="nome">Nome</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="date" id="data-criacao" class="form-control" required="required"
                                           placeholder="Data Criação" autofocus="autofocus" name="data_criacao" />
                                    <label for="data-criacao">Data Criação</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    <input type="date" id="data-finalizacao" class="form-control" required="required"
                                           placeholder="Data Finalização" autofocus="autofocus" name="data_finalizacao" />
                                    <label for="data-finalizacao">Data Finalização</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success col-md-12" type="submit">Registrar</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Index", "Projeto")">Deseja alterar algum projeto já cadastrad ?</a>
            </div>
        </div>
    </div>
</div>