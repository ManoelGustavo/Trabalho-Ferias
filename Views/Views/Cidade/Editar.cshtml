
@{
    ViewBag.Title = "Editar";
}
<div class="container">
    <div class="card card-register mx-auto mt-4">
        <div class="card-header">Editar Cidade</div>
        <div class="card-body">
            <form action="@Url.Action("Update")" method="post">
                <input type="hidden" name="id" value="@ViewBag.Cidade.Id" />
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="text" id="id" name="id" class="form-control"
                                       placeholder="Código" required="required"
                                       value="@ViewBag.Cidade.Id" readonly="readonly" />
                                <label for="id">Código</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <select id="campo-estado" name="idEstado" class="form-control" required="required">
                                    @foreach (Model.Estado estado in ViewBag.Estados)
                                    {
                                        if (estado.Id == ViewBag.Cidade.IdEstado)
                                        {
                                            <option value="@estado.Id" selected="selected">@estado.Nome</option>
                                        }
                                        else
                                        {
                                            <option value="@estado.Id">@estado.Nome</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input type="text" id="nome" class="form-control" placeholder="Nome" required="required" autofocus="autofocus" name="nome" value="@ViewBag.Cidade.Nome">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12 ">
                            <div class="form-label-group">
                                <input type="number" id="campo-numero-habitantes" class="form-control" placeholder="Número de Habitantes" required="required" autofocus="autofocus" name="numeroHabitantes" value="@ViewBag.Cidade.NumeroHabitantes">
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success col-md-12" type="submit">Registrar</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Index", "Cidade")">Deseja alterar alguma Cidade já registrado ?</a>
            </div>
        </div>
    </div>
</div>
