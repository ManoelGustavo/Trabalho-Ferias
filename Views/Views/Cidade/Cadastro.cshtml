@{
    ViewBag.Title = "Cadastro";
}

<div class="container">
    <div class="card card-register mx-auto mt-4">
        <div class="card-header">Registro de Cidade</div>
        <div class="card-body">
            <form action="@Url.Action("Store")" method="post">
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-label-group">
                                <input type="text" id="nome" class="form-control" placeholder="Nome" required="required" autofocus="autofocus" name="nome" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12 ">
                                <div class="form-label-group">
                                    <label></label>
                                    <select id="campo-estado" name="idEstado" class="form-control" required="required">
                                        <option disabled="disabled" placeholder="estado id" selected="selected" value="">Selecione o Estado</option>
                                        @foreach (Model.Estado estado in ViewBag.Estados)
                                        {
                                            <option value="@estado.Id">@estado.Nome</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12 ">
                                <div class="form-label-group">
                                    <input type="number" id="campo-numero-habitantes" class="form-control" placeholder="Número de Habitantes" required="required" autofocus="autofocus" name="numeroHabitantes">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-success col-md-12" type="submit">Registrar</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Index", "Cidade")">Deseja alterar alguma cidade ja cadastrada ?</a>
            </div>
        </div>
    </div>
</div>

