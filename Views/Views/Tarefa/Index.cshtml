@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Lista de Tarefas</h2>
<div>
    <a href="@Url.Action("Cadastro")" class="btn btn-primary mt-1">Nova Tarefa</a>
</div>
<div class="row">
    <div class="col-3 offset-9">
        <div class="form-group">
            <input type="text" id="campo-pesquisa" placeholder="Busca" class="form-control" />
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Responsável</th>
            <th>Projeto</th>
            <th>Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody id="lista-tarefas"></tbody>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Responsável</th>
            <th>Projeto</th>
            <th>Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>
<script src="~/Scripts/Tarefas/Tarefa.js"></script>   