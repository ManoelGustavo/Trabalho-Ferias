@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Lista de Estados</h2>
<button class="btn btn-primary" data-toggle="modal" data-target="#modalCadastroEstado">Novo Estado</button>
<div class="row">
    <div class="col-3 offset-9">
        <div class="form-group">
            <input type="text" id="campo-pesquisa" placeholder="Busca" class="form-control" />
        </div>
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody id="lista-estados"></tbody>
</table>

<div class="modal fade" id="modalCadastroEstado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastro de Estados</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="campo-nome">Nome</label>
                    <input type="text" id="campo-nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="campo-Sigla">Sigla</label>
                    <input type="text" id="campo-sigla" class="form-control" />
                </div>
                <button type="button" class="btn btn-success" id="estado-botao-salvar">Salvar</button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/Estado/Estado.js"></script>
</div>